{
  "name": "blog-app-monorepo",
  "version": "1.0.0",
  "description": "MERN Stack Blogging Application",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node start.mjs",
    "build": "node scripts/build.mjs",
    "dev": "npm run dev-both",
    "dev-both": "concurrently \"cd server && npm run dev\" \"cd client && npm run dev\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
